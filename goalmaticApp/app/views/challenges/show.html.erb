<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @challenge %>

    <div class="container flex my-5">
      <div class="w-1/3 pr-4">
        <h1>Activities</h1>
      </div>
      <div class="w-2/3 pl-4">
        <h2 class="font-bold">
          <%= link_to "Add an Activity", new_challenge_activity_path(@challenge, @activity)%>
        </h2>
      </div>
    </div>

    <ul class="block">
      <% @challenge.activities.each do |activity| %>
        <%= render partial: 'activities/activity_listing', locals: { challenge: @challenge, activity: activity} %>
      <% end %>
    </ul>

    <%= link_to 'Edit this challenge', edit_challenge_path(@challenge), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this challenge', challenge_path(@challenge), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to challenges', challenges_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>


